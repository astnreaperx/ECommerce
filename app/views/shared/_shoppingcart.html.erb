<detail>
    <h3> Shopping Cart </h3>
    <ul>
        <% @cart.each do |prod| %>
            <li><%= prod.name %></li> - <%= link_to 'remove from cart', remove_from_cart_path(prod) , method: :delete %>
        <% end %>
        <%= button_to 'buy now', checkout_create_path, method: :post, params: {cart: @cart}, remote: true %>
    </ul>
</detail>