<h3>Recent Products</h3>
<% if @recent_products.present? %>
    <div class="columns is-multiline">
        <%= render partial: '/products/product', collection: @recent_products%>
    </div>
<% end %>

<h3>All Products</h3>
<% if @products.present? %>
    <div class="columns is-multiline">
        <%= render @products %>
    </div>
<% end %>



<%= paginate @products %>