<%= form_tag(products_path ,local: true, method: "get") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @products.present? %>
  <div class="columns is-multiline">
    <%= render @products %>
  </div>
<% end %>



<%= paginate @products %>